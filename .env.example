# LLM Configuration
LLM_MODEL=google-gla:gemini-2.0-flash
JUDGE_MODEL=google-gla:gemini-2.0-flash

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Tell the HuggingFace library to skip the version check and load directly from the local cache
HF_HUB_OFFLINE=1

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=personal_kb
QDRANT_USE_MEMORY=true
SEARCH_SCORE_THRESHOLD=0.1

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Data Directory
NOTES_DIR=data/notes
FIREFOX_PROFILE_PATH=data/firefox_bookmarks/places.sqlite


# Input Validation
MAX_QUERY_LENGTH=1000

# Tracing (requires `phoenix serve` running on the endpoint below)
TRACING_ENABLED=false
PHOENIX_ENDPOINT=http://127.0.0.1:6006/v1/traces
